<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/map_main_fragment"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <ImageButton
                android:id="@+id/btnclose_map"
                android:visibility="gone"
                android:layout_width="45dp"
                android:layout_height="match_parent"
                android:src="@drawable/ic_backbtn"
                android:background="@null"
                android:scaleType="fitCenter"
                android:padding="5dp"
                android:layout_marginLeft="5dp"
                />
            <EditText
                android:id="@+id/edit_search"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:imeOptions="actionSearch"
                android:inputType="text"
                android:maxLines="1"
                android:layout_marginLeft="15dp"
                android:hint="명소를 입력해주세요."
                android:textSize="18dp"
                android:background="@null"/>

            <ImageButton
                android:layout_width="45dp"
                android:layout_height="match_parent"
                android:id="@+id/btn_x"
                android:src="@drawable/btn_x"
                android:background="@null"
                android:padding="10dp"
                android:scaleType="fitCenter"
                android:layout_toLeftOf="@+id/btn_search"
                android:textSize="15dp"/>

            <ImageButton
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:src="@drawable/icon_search"
                android:scaleType="fitCenter"
                android:id="@+id/btn_search"
                android:padding="10dp"
                android:background="@null"
                android:text="검색"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="#efefef"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="11">


        <net.daum.mf.map.api.MapView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/map_view"
            android:visibility="visible"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:orientation="vertical">
                <ImageButton
                    android:id="@+id/marker_refresh"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:scaleType="fitCenter"
                    android:layout_gravity="end"
                    android:background="@android:color/transparent"
                    android:src="@drawable/marker_refresh"
                    android:layout_marginBottom="15dp"
                    android:layout_marginRight="15dp"/>

                <ImageButton
                    android:id="@+id/gps_tracker"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:scaleType="fitCenter"
                    android:layout_gravity="end"
                    android:background="@android:color/transparent"
                    android:src="@drawable/gps_tracker1"
                    android:layout_marginBottom="15dp"
                    android:layout_marginRight="15dp"/>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <ListView
                android:id="@+id/search_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#ffffff"
                android:visibility="invisible" />

        </LinearLayout>
    </FrameLayout>
</LinearLayout>