<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#eeeeee"
    android:orientation="vertical"
    android:layout_width="350dp"
    android:layout_height="match_parent"
    >

    <!-- 타이틀바 -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="명소 정보"
            android:textSize="20sp"
            android:textColor="#fff"
            android:gravity="center"
            android:background="#00b359"
            android:layout_width="match_parent"
            android:layout_height="53dp" />
    </LinearLayout>
    <!--  타이틀바 -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="15dp">

        <ImageView
            android:src="@drawable/ic_noimage"
            android:id="@+id/viewPicture"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:scaleType="fitXY"
            android:layout_gravity = "center_vertical"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true" />

        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/placeName"
            android:layout_width="match_parent"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"
            android:text="placeName"/>

        <TextView
            android:text="Loading..."
            android:id="@+id/placeLocation"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:textColor="#000"
            android:textSize="17sp"
            android:layout_marginTop="17dp"
            android:scrollbars="vertical"
            android:layout_marginLeft="10dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <Button
                android:id="@+id/btnBlogArticle_markerdlg"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity = "center_horizontal"
                android:text="명소 관련 후기검색"
                android:textSize="15dp"
                android:layout_marginTop="17dp"
                android:layout_marginLeft="10dp"/>
            <Button
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity = "center_horizontal"
                android:id="@+id/photo"
                android:text="명소 방문 인증"
                android:textSize="15dp"
                android:layout_marginTop="17dp"
                android:layout_marginLeft="10dp"/>

        </LinearLayout>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity = "center_horizontal"
                android:text="빠른 교통수단 안내"
                android:textSize="17dp"
                android:layout_marginTop="17dp"
                android:layout_marginLeft="10dp"/>
    </LinearLayout>
    <!-- Notice -->


    <!-- 닫기 버튼 -->
    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:text="닫기"
            android:textSize="15sp"
            android:textColor="#483D8B"
            android:padding="8dp"
            android:gravity="center"
            android:background="#00000000"
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:onClick="mOnClose"/>
    </LinearLayout>
    <!--// 닫기 버튼 -->

</LinearLayout>