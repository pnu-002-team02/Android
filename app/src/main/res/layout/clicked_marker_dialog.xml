<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#eeeeee"
    android:orientation="vertical"
    android:layout_width="330dp"
    android:layout_height="wrap_content">

    <!-- 타이틀바 -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="명소 정보"
            android:textSize="20sp"
            android:textColor="#fff"
            android:gravity="center"
            android:background="#00b359"
            android:layout_width="match_parent"
            android:layout_height="53dp" />
    </LinearLayout>
    <!--  타이틀바 -->

    <!-- Notice -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="15dp">

        <ImageView
            android:id="@+id/viewPicture"
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:scaleType="fitXY"
            android:layout_gravity = "center_vertical"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true" />

        <TextView
            android:id="@+id/placeName"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:alpha="0.87"
            android:gravity="center"
            android:textColor="#000"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_toEndOf="@+id/viewPicture"
            android:layout_toRightOf="@+id/viewPicture"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:id="@+id/placeLocation"
            android:layout_width="80dp"
            android:layout_height="100dp"
            android:alpha="0.87"
            android:gravity="center"
            android:textColor="#000"
            android:textSize="17sp"
            android:layout_below="@+id/placeName"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="17dp"
            android:scrollbars="vertical"
            android:layout_toRightOf="@+id/viewPicture"
            android:layout_toEndOf="@+id/viewPicture"
            android:layout_marginLeft="10dp"/>

        <Button
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_gravity = "center_horizontal"
            android:id="@+id/photo"
            android:text="명소 사진 촬영"
            android:textSize="17sp"
            android:layout_marginTop="17dp"
            android:layout_below="@+id/placeLocation"
            android:layout_toRightOf="@+id/viewPicture"
            android:layout_toEndOf="@+id/viewPicture"
            android:layout_marginLeft="10dp"/>

    </RelativeLayout>
    <!-- Notice -->


    <!-- 닫기 버튼 -->
    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:text="닫기"
            android:textSize="15sp"
            android:textColor="#483D8B"
            android:padding="8dp"
            android:gravity="center"
            android:background="#00000000"
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:onClick="mOnClose"/>
    </LinearLayout>
    <!--// 닫기 버튼 -->

</LinearLayout>